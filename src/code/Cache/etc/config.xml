<config>
    <modules>
        <Made_Cache>
            <version>1.5.0</version>
        </Made_Cache>
    </modules>
    <global>
        <cache>
            <types>
                <varnish translate="label,description" module="cache">
                    <label>Varnish</label>
                    <description><![CDATA[Full page cache. Requires a configured Varnish daemon, see https://www.varnish-cache.org/]]></description>
                    <tags>FPC_VARNISH</tags>
                </varnish>
            </types>
            <block>
                <modifiers>
                    <groupid>cache/modifier_groupid</groupid>
                    <cacheid>cache/modifier_cacheid</cacheid>
                    <blocktype>cache/modifier_blocktype</blocktype>
                    <currency>cache/modifier_currency</currency>
                    <ssl>cache/modifier_ssl</ssl>
                    <store>cache/modifier_store</store>
                    <request>cache/modifier_request</request>
                </modifiers>
            </block>
        </cache>
        <helpers>
            <cache>
                <class>Made_Cache_Helper</class>
            </cache>
        </helpers>
        <models>
            <cache>
                <class>Made_Cache_Model</class>
            </cache>
            <core>
                <rewrite>
                    <layout>Made_Cache_Model_Layout</layout>
                </rewrite>
            </core>
            <!-- Uncomment the below if you want to use the bundled redis
                 session handler. You can also paste it into your local.xml -->
            <!--
            <core_resource>
                <rewrite>
                    <session>Made_Cache_Redis_Session</session>
                </rewrite>
            </core_resource>
            -->
        </models>
        <blocks>
            <cache>
                <class>Made_Cache_Block</class>
            </cache>
            <core>
                <rewrite>
                    <messages>Made_Cache_Block_Messages</messages>
                </rewrite>
            </core>
        </blocks>
        <events>
            <application_clean_cache>
                <observers>
                    <varnish_purge>
                        <type>singleton</type>
                        <class>cache/varnishObserver</class>
                        <method>purge</method>
                    </varnish_purge>
                </observers>
            </application_clean_cache>
            <controller_action_predispatch>
                <observers>
                    <remove_uenc_param>
                        <type>singleton</type>
                        <class>cache/observer</class>
                        <method>removeUencParam</method>
                    </remove_uenc_param>
                </observers>
            </controller_action_predispatch>
            <core_block_abstract_to_html_before>
                <observers>
                    <cache_setup_block>
                        <type>singleton</type>
                        <class>cache/observer</class>
                        <method>setupBlock</method>
                    </cache_setup_block>
                </observers>
            </core_block_abstract_to_html_before>
            <sales_order_place_after>
                <observers>
                    <cache_order_place_after>
                        <type>singleton</type>
                        <class>cache/observer</class>
                        <method>clearProductCacheAfterOrderPlace</method>
                    </cache_order_place_after>
                </observers>
            </sales_order_place_after>
        </events>
    </global>
    <frontend>
        <routers>
            <madecache>
                <use>standard</use>
                <args>
                    <module>Made_Cache</module>
                    <frontName>madecache</frontName>
                </args>
            </madecache>
        </routers>
        <layout>
            <updates>
                <madecache>
                    <file>made/cache.xml</file>
                </madecache>
            </updates>
        </layout>
        <!-- We have catalog blocks - let's use its translations -->
        <translate>
            <modules>
                <Made_Cache>
                    <files>
                        <default>Mage_Catalog.csv</default>
                    </files>
                </Made_Cache>
            </modules>
        </translate>
        <events>
            <controller_action_layout_load_before>
                <observers>
                    <add_layout_handle>
                        <type>singleton</type>
                        <class>cache/varnishObserver</class>
                        <method>addLayoutHandle</method>
                    </add_layout_handle>
                </observers>
            </controller_action_layout_load_before>
            <core_block_abstract_to_html_after>
                <observers>
                    <cache_add_esi_tags>
                        <type>singleton</type>
                        <class>cache/varnishObserver</class>
                        <method>addEsiTag</method>
                    </cache_add_esi_tags>
                    <cache_profiler_end>
                        <type>singleton</type>
                        <class>cache/observer</class>
                        <method>profilerEnd</method>
                    </cache_profiler_end>
                </observers>
            </core_block_abstract_to_html_after>
            <core_block_abstract_to_html_before>
                <observers>
                    <cache_profiler_start>
                        <type>singleton</type>
                        <class>cache/observer</class>
                        <method>profilerStart</method>
                    </cache_profiler_start>
                </observers>
            </core_block_abstract_to_html_before>
            <made_cache_setup_block_after>
                <observers>
                    <varnish_save_block_tags>
                        <type>singleton</type>
                        <class>cache/varnishObserver</class>
                        <method>saveBlockTags</method>
                    </varnish_save_block_tags>
                </observers>
            </made_cache_setup_block_after>
            <controller_front_send_response_before>
                <observers>
                    <set_varnish_headers>
                        <type>singleton</type>
                        <class>cache/varnishObserver</class>
                        <method>setVarnishCacheHeaders</method>
                    </set_varnish_headers>
                    <purge_messages_cache>
                        <type>singleton</type>
                        <class>cache/varnishObserver</class>
                        <method>purgeMessagesCache</method>
                    </purge_messages_cache>
                    <varnish_store_tags_url>
                        <type>singleton</type>
                        <class>cache/varnishObserver</class>
                        <method>storeTagsUrl</method>
                    </varnish_store_tags_url>
                </observers>
            </controller_front_send_response_before>
            <customer_customer_authenticated>
                <observers>
                    <clear_varnish_user_cache>
                        <type>singleton</type>
                        <class>cache/varnishObserver</class>
                        <method>purgeUserCache</method>
                    </clear_varnish_user_cache>
                </observers>
            </customer_customer_authenticated>
            <customer_login>
                <observers>
                    <clear_varnish_user_cache>
                        <type>singleton</type>
                        <class>cache/varnishObserver</class>
                        <method>purgeUserCache</method>
                    </clear_varnish_user_cache>
                </observers>
            </customer_login>
            <customer_logout>
                <observers>
                    <clear_varnish_user_cache>
                        <type>singleton</type>
                        <class>cache/varnishObserver</class>
                        <method>purgeUserCache</method>
                    </clear_varnish_user_cache>
                </observers>
            </customer_logout>
            <sales_quote_item_save_after>
                <observers>
                    <clear_varnish_user_cache>
                        <type>singleton</type>
                        <class>cache/varnishObserver</class>
                        <method>purgeUserCache</method>
                    </clear_varnish_user_cache>
                </observers>
            </sales_quote_item_save_after>
            <sales_quote_item_delete_after>
                <observers>
                    <clear_varnish_user_cache>
                        <type>singleton</type>
                        <class>cache/varnishObserver</class>
                        <method>purgeUserCache</method>
                    </clear_varnish_user_cache>
                </observers>
            </sales_quote_item_delete_after>
            <catalog_product_compare_add_product>
                <observers>
                    <clear_varnish_user_cache>
                        <type>singleton</type>
                        <class>cache/varnishObserver</class>
                        <method>purgeUserCache</method>
                    </clear_varnish_user_cache>
                </observers>
            </catalog_product_compare_add_product>
            <catalog_product_compare_remove_product>
                <observers>
                    <clear_varnish_user_cache>
                        <type>singleton</type>
                        <class>cache/varnishObserver</class>
                        <method>purgeUserCache</method>
                    </clear_varnish_user_cache>
                </observers>
            </catalog_product_compare_remove_product>
            <catalog_product_compare_item_collection_clear>
                <observers>
                    <clear_varnish_user_cache>
                        <type>singleton</type>
                        <class>cache/varnishObserver</class>
                        <method>purgeUserCache</method>
                    </clear_varnish_user_cache>
                </observers>
            </catalog_product_compare_item_collection_clear>
        </events>
    </frontend>
    <adminhtml>
        <events>
            <controller_action_postdispatch_adminhtml_catalog_product_save>
                <observers>
                    <clean_cache_after_product_save>
                        <type>singleton</type>
                        <class>cache/observer</class>
                        <method>cleanCacheAfterProductSave</method>
                    </clean_cache_after_product_save>
                </observers>
            </controller_action_postdispatch_adminhtml_catalog_product_save>
            <adminhtml_cache_flush_system>
                <observers>
                    <varnish_purge>
                        <type>singleton</type>
                        <class>cache/varnishObserver</class>
                        <method>flush</method>
                    </varnish_purge>
                </observers>
            </adminhtml_cache_flush_system>
            <adminhtml_cache_flush_all>
                <observers>
                    <varnish_purge>
                        <type>singleton</type>
                        <class>cache/varnishObserver</class>
                        <method>flush</method>
                    </varnish_purge>
                </observers>
            </adminhtml_cache_flush_all>
            <adminhtml_cache_refresh_type>
                <observers>
                    <varnish_purge>
                        <type>singleton</type>
                        <class>cache/varnishObserver</class>
                        <method>flush</method>
                    </varnish_purge>
                </observers>
            </adminhtml_cache_refresh_type>
            <review_save_after>
                <observers>
                    <cache_review_save_after>
                        <type>singleton</type>
                        <class>cache/observer</class>
                        <method>reviewSaveAfter</method>
                    </cache_review_save_after>
                </observers>
            </review_save_after>
        </events>
        <acl>
            <resources>
                <admin>
                    <children>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <cache>
                                            <title>Made Cache Section</title>
                                        </cache>
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
    </adminhtml>
    <default>
        <cache>
            <general>
                <enable_profiler>0</enable_profiler>
                <remove_redirect_param>0</remove_redirect_param>
                <clear_product_cache_placed_order>0</clear_product_cache_placed_order>
            </general>
            <varnish>
                <ttl>1w</ttl>
                <cache_routes><![CDATA[catalog
review
cms]]>
                </cache_routes>
                <servers>127.0.0.1</servers>
                <debug>0</debug>
            </varnish>
        </cache>
    </default>
</config>
